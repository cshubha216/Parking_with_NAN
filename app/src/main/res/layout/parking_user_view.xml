<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/legendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#2b2b2b">

        <!-- Color Indicator 1 -->
        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF5733" /> <!-- Change to your desired color -->

        <!-- Legend Text for Indicator 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Spaces"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"/>

        <!-- Color Indicator 2 -->
        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#33FF57" /> <!-- Change to your desired color -->

        <!-- Legend Text for Indicator 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupied Spaces"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="5"
        android:padding="16dp"
        android:background="#2b2b2b"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/legendLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >
        
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/button0"
            android:paddingRight="4dp"
            android:background="@drawable/parking_button_free" />

        <!-- Row 1, Column 2 -->
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/button1"
            android:paddingRight="4dp"
            android:background="@drawable/parking_button_free"/>

        <!-- Row 1, Column 3 -->
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingRight="4dp"
            android:id="@+id/button2"
            android:background="@drawable/parking_button_free"/>

        <!-- Row 2, Column 1 -->
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/button3"
            android:background="@drawable/parking_button_free"/>

        <!-- Row 2, Column 2 -->
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingRight="4dp"
            android:id="@+id/button4"
            android:background="@drawable/parking_button_free"/>

        <!-- Row 2, Column 3 -->
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/button5"
            android:paddingRight="4dp"
            android:background="@drawable/parking_button_free"/>

        <!-- Row 3, Column 1 -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingRight="4dp"
            style="@style/ButtonStyle"
            android:id="@+id/button6"
            android:background="@drawable/parking_button_free"/>

        <!-- Row 3, Column 2 -->
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingRight="4dp"
            android:id="@+id/button7"
            android:background="@drawable/parking_button_free"/>

        <!-- Row 3, Column 3 -->
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingRight="4dp"
            android:id="@+id/button8"
            android:background="@drawable/parking_button_free"/>
        <Button
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:paddingRight="4dp"
            android:id="@+id/button9"
            android:background="@drawable/parking_button_free"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>