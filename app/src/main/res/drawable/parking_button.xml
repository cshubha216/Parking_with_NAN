<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#2b2b2b" /> <!-- Black background color -->
        </shape>
    </item>

    <!-- Border -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
    <shape
        android:shape="rectangle">
        <solid android:color="#00000000" /> <!-- Transparent background -->
        <stroke android:width="10dp" android:color="#c7a604" />
    </shape>
</item>


    </layer-list>
